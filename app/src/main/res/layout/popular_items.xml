<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_100sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgPopularMealItem"
            android:layout_width="match_parent"
            android:src="@color/shimmer_color"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvPopularMealName"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:paddingEnd="12dp"
        android:paddingStart="2dp"
        app:layout_constraintTop_toBottomOf="@id/CardView"
        app:layout_constraintStart_toStartOf="@id/CardView"
        app:layout_constraintEnd_toEndOf="@id/CardView"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/background_color" />

    <TextView
        android:id="@+id/tvPopularMealRating"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Asian"
        android:textSize="@dimen/_10ssp"
        android:drawableStart="@drawable/ic_rating"
        android:layout_marginTop="2dp"
        android:textColor="@color/background_color"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPopularMealName"
        app:layout_constraintStart_toStartOf="@id/tvPopularMealName"
        app:layout_constraintEnd_toEndOf="@id/tvPopularMealName"/>


</androidx.constraintlayout.widget.ConstraintLayout>

